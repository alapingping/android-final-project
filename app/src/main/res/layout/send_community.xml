<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.sports.yue.UI.UI.activity.SendCommunity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/community_add_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How about saying something"
            android:textSize="14dp"
            android:layout_marginRight="5dp"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:id="@+id/community_add_pic"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_add"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
    <RelativeLayout
        android:id="@+id/community_location"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="地点"/>
        <ImageView
            android:id="@+id/get_community_location"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_location" />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/community_send_button"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Send"
            android:textSize="15dp"
            android:layout_marginRight="10dp"/>
        <View
            android:id="@+id/line1"
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:background="#E0E0E0"/>
    </LinearLayout>


</LinearLayout>
